@model IPagedList<Post>
@{
    ViewData["PageTitle"] = "Tác giả";
}

<div class="p-4">
    @if (!string.IsNullOrWhiteSpace(ViewBag.Author))
    {
        <h3 class="text-primary mb-3">
            Những bài viết của tác giả '@ViewBag.Author'
        </h3>
    }
    @if (Model.Count() == 0)
    {
        <p>Không có bài viết nào thuộc tác giả '@ViewBag.Author'</p>
    }
    @foreach (var postItem in Model)
    {
        <partial name="_PostItem" model="postItem" />
    }
    <partial name="_Pager" model="@Model" />
</div>